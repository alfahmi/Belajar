<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:paddingLeft="20pt"
    android:paddingRight="20pt"
    android:paddingTop="15pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="PANJANG" />

        <EditText
            android:id="@+id/edt_panjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="LEBAR" />

        <EditText
            android:id="@+id/edt_lebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:ems="10"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_jumlah"
            style="@style/AppTheme.Button"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HITUNG" />

        <Button
            android:id="@+id/btn_reset"
            style="@style/AppTheme.Button"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RESET" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_luas_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10pt"
            android:textSize="10pt"
            android:textStyle="bold"
            android:text="LUAS" />

        <TextView
            android:id="@+id/tv_luas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10pt"
            android:textSize="15pt"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:id="@+id/tv_keliling_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10pt"
            android:textSize="10pt"
            android:textStyle="bold"
            android:text="KELILING" />

        <TextView
            android:id="@+id/tv_keliling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10pt"
            android:textSize="15pt"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:id="@+id/tv_diagonal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10pt"
            android:textSize="10pt"
            android:textStyle="bold"
            android:text="DIAGONAL" />

        <TextView
            android:id="@+id/tv_diagonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10pt"
            android:textSize="15pt"
            android:textStyle="bold"
            android:text="0" />
    </LinearLayout>

</LinearLayout>